---
import Layout from '../../layouts/Layout.astro';
import { fetchNoteArticles } from '../../lib/note';
import { formatDate } from '../../lib/date';

export async function getStaticPaths() {
  const articles = await fetchNoteArticles(10);
  return articles.map((article) => ({
    params: { key: article.key },
    props: { article },
  }));
}

const { article } = Astro.props;
const formattedDate = formatDate(article.publishedAt);
---

<Layout
  title={`${article.title} | げんき塾チーム`}
  description={article.body.slice(0, 120)}
  ogImage={article.eyecatchUrl || undefined}
>
  <article>
    <header class="article-header">
      <div class="container">
        <a href={import.meta.env.BASE_URL} class="back-link">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          トップに戻る
        </a>
        <time datetime={new Date(article.publishedAt).toISOString()}>{formattedDate}</time>
        <h1>{article.title}</h1>
      </div>
    </header>

    {article.eyecatchUrl && (
      <img src={article.eyecatchUrl} alt="" class="eyecatch" />
    )}

    <div class="container">
      <div class="article-content">
        <div class="body-text">
          {article.body.split('\n').map((paragraph: string) => (
            paragraph.trim() && <p>{paragraph}</p>
          ))}
        </div>
      </div>

      <div class="note-cta">
        <p class="note-cta-text">この記事の続きはnoteでご覧いただけます</p>
        <a href={article.noteUrl} target="_blank" rel="noopener noreferrer" class="note-cta-btn">
          <img src={`${import.meta.env.BASE_URL}images/common/note-logo.svg`} alt="" width="32" height="13" />
          noteで全文を読む
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
          </svg>
        </a>
      </div>

      <footer class="article-footer">
        <a href={import.meta.env.BASE_URL} class="btn-outline">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          トップに戻る
        </a>
      </footer>
    </div>
  </article>
</Layout>

<style>
  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 0 var(--space-md);
  }

  .article-header {
    background: var(--color-bg-white);
    padding: var(--space-lg) 0;
    border-bottom: 1px solid var(--color-border);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--color-text-muted);
    text-decoration: none;
    margin-bottom: var(--space-md);
    transition: color 0.2s;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .article-header time {
    display: block;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-xs);
  }

  .article-header h1 {
    font-size: 1.35rem;
    font-weight: 900;
    line-height: 1.4;
  }

  .article-content {
    padding: var(--space-lg) 0;
  }

  .eyecatch {
    width: 100%;
    height: auto;
    display: block;
  }

  .body-text {
    line-height: 1.9;
  }

  .body-text p {
    margin-bottom: var(--space-md);
  }

  .note-cta {
    background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
    padding: var(--space-lg);
    border-radius: var(--radius-md);
    text-align: center;
    margin: var(--space-lg) 0;
    border: 2px solid var(--color-border);
  }

  .note-cta-text {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-md);
  }

  .note-cta-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    background: #41C9B4;
    color: white;
    font-size: 0.9rem;
    font-weight: 700;
    text-decoration: none;
    border: 2px solid var(--color-border);
    border-radius: 0;
    box-shadow: 4px 4px 0 var(--color-border);
    transition: all 0.2s;
  }

  .note-cta-btn:hover {
    box-shadow: 2px 2px 0 var(--color-border);
    transform: translate(2px, 2px);
  }

  .note-cta-btn img {
    filter: brightness(0) invert(1);
  }

  .article-footer {
    padding: var(--space-lg) 0 var(--space-2xl);
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .btn-outline {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-sm) var(--space-md);
    background: transparent;
    color: var(--color-primary);
    font-size: 0.9rem;
    font-weight: 700;
    text-decoration: none;
    border: 2px solid var(--color-border);
    border-radius: 0;
    box-shadow: 4px 4px 0 var(--color-border);
    transition: all 0.2s;
  }

  .btn-outline:hover {
    background: var(--color-primary);
    color: white;
    box-shadow: 2px 2px 0 var(--color-border);
    transform: translate(2px, 2px);
  }
</style>
